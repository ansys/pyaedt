import random
import string
#Choose file to launch

def generate_unique_name(rootname, suffix="", n=6):

    char_set = string.ascii_uppercase + string.digits
    uName = "".join(random.choice(char_set) for _ in range(n))
    unique_name = rootname + "_" + uName
    if suffix:
        unique_name += suffix
    return unique_name

